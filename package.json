{
  "name": "vp_app",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "electron-reload": "^2.0.0-alpha.1",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "module-alias": "^2.2.3",
    "moran": "^0.0.11",
    "multer": "^2.0.0",
    "nedb-promises": "^6.2.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "prettier": "^3.5.3"
  },
  "_moduleAliases": {
    "@src": "src",
    "@public": "public"
  },
  "build": {
    "appId": "com.example.vpapp",
    "productName": "VP App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VP App",
      "installDirectory": "C:\\VPApp"
    },
    "extraFiles": [
      {
        "from": "public/extra.txt",
        "to": "extra.txt"
      },
      {
        "from": "public/config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
